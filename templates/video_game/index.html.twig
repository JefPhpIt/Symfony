{% extends 'base.html.twig' %}

{% block title %}VideoGame index{% endblock %}

{% block body %}
    <h1>VideoGame index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Released</th>
                <th>Rating</th>
                <th>UrlImg</th>
                <th>ApiId</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for video_game in video_games %}
            <tr>
                <td>{{ video_game.id }}</td>
                <td>{{ video_game.name }}</td>
                <td>{{ video_game.released ? video_game.released|date('Y-m-d') : '' }}</td>
                <td>{{ video_game.rating }}</td>
                <td>{{ video_game.urlImg }}</td>
                <td>{{ video_game.apiId }}</td>
                <td>
                    <a href="{{ path('app_video_game_show', {'id': video_game.id}) }}">show</a>
                    <a href="{{ path('app_video_game_edit', {'id': video_game.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_video_game_new') }}">Create new</a>
{% endblock %}

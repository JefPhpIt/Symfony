{% extends 'base.html.twig' %}

{% block title %}VideoGame{% endblock %}

{% block body %}
    <h1>VideoGame</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ video_game.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ video_game.name }}</td>
            </tr>
            <tr>
                <th>Released</th>
                <td>{{ video_game.released ? video_game.released|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ video_game.rating }}</td>
            </tr>
            <tr>
                <th>UrlImg</th>
                <td>{{ video_game.urlImg }}</td>
            </tr>
            <tr>
                <th>ApiId</th>
                <td>{{ video_game.apiId }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_video_game_index') }}">back to list</a>

    <a href="{{ path('app_video_game_edit', {'id': video_game.id}) }}">edit</a>


{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>{{ user.firstName | capitalize }} {{ user.lastName | upper }}</h1>

    <div class="row mt-5">
        <div class="col-12">
            <h2>Liste des jeux videos</h2>
        </div>
    </div>
    <div class="row mt-3">
        {% for videoGame  in user.videoGames %}
            <div class="col-sm-12 col-md-4">
                <div class="card" style="width: 18rem;">
                    <img src="{{ videoGame.UrlImg }}" class="card-img-top" alt="{{ videoGame.name }}">
                    <div class="card-body">
                        <h5 class="card-title">{{ videoGame.name }}</h5>
                        <p class="card-text">{{ videoGame.released | date('d/m/Y') }}</p>
                        <p class="card-text">

                        </p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <div class="row mt-3">
        <div class="col-12">
            <a href="{{ path('app_user_edit', {'id': user.id}) }}">
                <button class="btn btn-success">Éditer</button>
            </a>
            <a href="{{ path('app_video_game_search', {'user': user.id}) }}">
                <button class="btn btn-success">Ajouter un jeux vidéo</button>
            </a>
        </div>
        <div class="col-12">
            <a href="{{ path('app_user_index') }}">back to list</a>
        </div>
        {{ include('user/_delete_form.html.twig') }}
    </div>
{% endblock %}
